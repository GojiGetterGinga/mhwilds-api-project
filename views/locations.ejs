<!DOCTYPE html>
<html>

<head>
  <title>Locations</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Markazi+Text:wght@400..700&display=swap" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="styles/main.css">
  
</head>

<body>
  <div class="container">
    <%if (locals.error) {%>
            <div id="tag-error" class="tag-error">
              <%-error %>
            </div>
    <%}%>
    <% if (locals.data) { %> 
    <div class="response-area">
        <h1>
          Location: <%= zoneName %> 
        </h1>
        <h2>
          Number of Zones: <%= zoneCount %> 
        </h2>
        <h2> Camps </h2>

         <% data.forEach((camp) => { %>
          <ul>
            <li>
                <h4> <%= camp.name %></h4> <p>Risk: <%= camp.risk.charAt(0).toUpperCase() + camp.risk.slice(1) %> </p>
            </li>
          </ul>
        <% }) %> 
    </div>
    <% } %> 

    <form id="myForm" method="post">
      <label for="idInput">Choose Location:</label>
      <!-- <input type="text" id="idInput" name="id"> -->
      <select name ="id" > 
        <option value="" selected hidden>Random</option>
        <option value="1">Oilwell Basin</option>
        <option value="2">Windward Plains</option>
        <option value="3">Scarlet Forest</option>
        <option value="4">Ruins of Wyveria</option>
        <option value="5">Iceshard Cliffs</option>
      </select>


      <label for="riskInput">Danger:</label>
      <select name ="risk" > 
      <option value="" selected hidden>All</option>
      <option value="safe">Safe</option>
      <option value="insecure">Insecure</option>
      <option value="dangerous">Dangerous</option>
      </select>

      <input class="button" type="submit" value="Enter" formaction="/get-location">
    </form>
  </div>
</body>
<%- include("partials/footer.ejs") %>

</html>